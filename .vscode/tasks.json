{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C: gcc build all files",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "gcc -fdiagnostics-color=always -g -o \"${workspaceFolder}/projectc\" -ansi -Wall -pedantic -std=c90 \"${workspaceFolder}\"/*.c -I \"${workspaceFolder}/include\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}