{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C: gcc build all files",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "gcc -fdiagnostics-color=always -g -o \"${workspaceFolder}/projectc\" -ansi -Wall -pedantic -std=c90 \"${workspaceFolder}\"/*.c -I \"${workspaceFolder}/include\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
